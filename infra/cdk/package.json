{
  "name": "medeez-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Medeez SaaS platform",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:staging": "cdk deploy --all --require-approval never --context environment=staging",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "destroy:dev": "cdk destroy --all --force --context environment=dev",
    "destroy:staging": "cdk destroy --all --force --context environment=staging",
    "diff:dev": "cdk diff --all --context environment=dev",
    "diff:staging": "cdk diff --all --context environment=staging",
    "diff:prod": "cdk diff --all --context environment=prod",
    "synth": "cdk synth --all",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "aws-cdk": "^2.100.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.3.0"
  }
}
