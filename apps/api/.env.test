# Test Environment Configuration for Medeez v2 API
# HIPAA-compliant testing environment

NODE_ENV=test
AWS_REGION=us-east-1
STAGE=test

# Database Tables (Test)
PATIENTS_TABLE=test-patients-table
APPOINTMENTS_TABLE=test-appointments-table
NOTES_TABLE=test-notes-table
INVOICES_TABLE=test-invoices-table
CLINICS_TABLE=test-clinics-table
USERS_TABLE=test-users-table
AUDIT_LOGS_TABLE=test-audit-logs-table

# S3 Buckets (Test)
ATTACHMENTS_BUCKET=test-medeez-attachments
EXPORTS_BUCKET=test-medeez-exports
BACKUP_BUCKET=test-medeez-backups

# Security Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-production
JWT_EXPIRES_IN=1h
ENCRYPTION_KEY_ID=test-kms-key-id
ENCRYPTION_ALGORITHM=AES-256-GCM

# Rate Limiting (More lenient for testing)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000
SEARCH_RATE_LIMIT_MAX=100
EXPORT_RATE_LIMIT_MAX=10

# Cognito Configuration (Test)
COGNITO_USER_POOL_ID=test-user-pool-id
COGNITO_CLIENT_ID=test-client-id
COGNITO_REGION=us-east-1

# Email Configuration (Test)
SES_SENDER_EMAIL=test@example.com
SES_REGION=us-east-1

# Audit Logging
AUDIT_LOG_STREAM=test-audit-log-stream
LOG_LEVEL=warn

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,doc,docx

# Test Database Connection (if using local DB for integration tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=medeez_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# Feature Flags for Testing
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true

# Mock Service URLs
MOCK_PAYMENT_PROCESSOR_URL=http://localhost:3333
MOCK_EMAIL_SERVICE_URL=http://localhost:3334

# Test User Credentials (for integration tests)
TEST_ADMIN_EMAIL=admin@test.medeez.com
TEST_DOCTOR_EMAIL=doctor@test.medeez.com
TEST_STAFF_EMAIL=staff@test.medeez.com

# Disable external service calls in test
DISABLE_EXTERNAL_CALLS=true
MOCK_AWS_SERVICES=true