# ===================================================================
# MEDEEZ V2 - DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================================================
# This file contains all environment variables needed for local development
# NEVER commit sensitive values to version control - use placeholders

# ===================================================================
# ENVIRONMENT SETTINGS
# ===================================================================
NODE_ENV=development
ENVIRONMENT=dev
LOG_LEVEL=debug
DEBUG=medeez:*

# ===================================================================
# AWS CONFIGURATION
# ===================================================================
AWS_REGION=us-east-1
AWS_PROFILE=medeez-dev
CDK_DEFAULT_ACCOUNT=YOUR_AWS_ACCOUNT_ID
CDK_DEFAULT_REGION=us-east-1

# DynamoDB Configuration
DYNAMO_TABLE_NAME=medeez-dev-app
DYNAMO_ENDPOINT=http://localhost:8000
USE_LOCAL_DYNAMODB=true

# S3 Configuration
S3_BUCKET_NAME=medeez-dev-attachments-YOUR_ACCOUNT_ID
S3_ENDPOINT=http://localhost:9000
USE_LOCAL_S3=true

# KMS Configuration
KMS_KEY_ID=alias/medeez-dev-key
KMS_KEY_ALIAS=alias/medeez-dev-key

# ===================================================================
# COGNITO AUTHENTICATION
# ===================================================================
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
COGNITO_REGION=us-east-1
COGNITO_DOMAIN=medeez-dev-auth.auth.us-east-1.amazoncognito.com

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ===================================================================
# API CONFIGURATION
# ===================================================================
API_BASE_URL=http://localhost:3001
API_VERSION=v1
API_PORT=3001
API_HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# WEB APPLICATION
# ===================================================================
WEB_BASE_URL=http://localhost:3000
WEB_PORT=3000

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# PostgreSQL (if using RDS for audit logs)
DATABASE_URL=postgresql://medeez_dev:dev_password@localhost:5432/medeez_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medeez_dev
DB_USER=medeez_dev
DB_PASSWORD=dev_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===================================================================
# EMAIL SERVICE CONFIGURATION (SES)
# ===================================================================
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@dev.medeez.com
SES_FROM_NAME=Medeez Dev
SES_REPLY_TO_EMAIL=support@dev.medeez.com
SES_CONFIGURATION_SET=medeez-dev-config-set

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=medeez-dev-welcome
INVITATION_EMAIL_TEMPLATE_ID=medeez-dev-invitation
PASSWORD_RESET_TEMPLATE_ID=medeez-dev-password-reset
APPOINTMENT_REMINDER_TEMPLATE_ID=medeez-dev-appointment-reminder

# ===================================================================
# FILE STORAGE CONFIGURATION
# ===================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
UPLOAD_PATH=/tmp/uploads
FILE_EXPIRY_HOURS=24

# Image Processing
THUMBNAIL_WIDTH=150
THUMBNAIL_HEIGHT=150
IMAGE_QUALITY=80

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# Encryption
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY=dev-encryption-key-32-characters
HASH_ROUNDS=12

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_TIMEOUT=3600000
SESSION_SECURE=false

# HIPAA Compliance
PHI_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555

# ===================================================================
# MONITORING AND LOGGING
# ===================================================================
# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/lambda/medeez-dev-api
CLOUDWATCH_LOG_RETENTION_DAYS=7
CLOUDWATCH_REGION=us-east-1

# Application Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000
PERFORMANCE_MONITORING=true

# Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=dev-local

# ===================================================================
# THIRD-PARTY INTEGRATIONS
# ===================================================================
# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=http://localhost:3001/api/v1/webhooks/twilio

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_URL=http://localhost:3001/api/v1/webhooks/stripe

# Paddle Subscription Management
PADDLE_VENDOR_ID=123456
PADDLE_API_KEY=your-paddle-api-key
PADDLE_PUBLIC_KEY=your-paddle-public-key
PADDLE_SANDBOX=true
PADDLE_WEBHOOK_URL=http://localhost:3001/api/v1/webhooks/paddle

# ===================================================================
# FEATURE FLAGS
# ===================================================================
FEATURE_PATIENT_PORTAL=true
FEATURE_TELEHEALTH=false
FEATURE_BILLING=true
FEATURE_CLAIMS=false
FEATURE_ANALYTICS=true
FEATURE_MOBILE_APP=false
FEATURE_AI_ASSISTANT=false

# ===================================================================
# CACHING CONFIGURATION
# ===================================================================
# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=300
CACHE_PROVIDER=memory

# ===================================================================
# WEBHOOK CONFIGURATION
# ===================================================================
WEBHOOK_SECRET=dev-webhook-secret-change-in-production
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5000

# ===================================================================
# BACKUP AND RECOVERY
# ===================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=medeez-dev-backups-YOUR_ACCOUNT_ID

# ===================================================================
# DEVELOPMENT TOOLS
# ===================================================================
# Hot Reload
HOT_RELOAD=true
WATCH_FILES=true

# Testing
TEST_DATABASE_URL=postgresql://medeez_test:test_password@localhost:5432/medeez_test
TEST_S3_BUCKET=medeez-test-attachments
TEST_TIMEOUT=30000

# Mock Services
MOCK_SMS=true
MOCK_EMAIL=true
MOCK_PAYMENTS=true
MOCK_EXTERNAL_APIS=true

# ===================================================================
# LOCALSTACK CONFIGURATION (for local AWS services)
# ===================================================================
LOCALSTACK_HOSTNAME=localhost
LOCALSTACK_EDGE_PORT=4566
USE_LOCALSTACK=true

# LocalStack Services
LOCALSTACK_SERVICES=dynamodb,s3,ses,kms,secretsmanager,ssm,lambda,apigateway

# ===================================================================
# HEALTH CHECK CONFIGURATION
# ===================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENDPOINTS=database,redis,s3,ses

# ===================================================================
# CLINIC SETTINGS (Default for development)
# ===================================================================
DEFAULT_CLINIC_ID=clinic_dev_001
DEFAULT_CLINIC_NAME=Medeez Development Clinic
DEFAULT_CLINIC_TIMEZONE=America/New_York
DEFAULT_CLINIC_CURRENCY=USD
DEFAULT_CLINIC_COUNTRY=US

# ===================================================================
# SUBSCRIPTION SETTINGS
# ===================================================================
DEFAULT_TRIAL_DAYS=14
MAX_PATIENTS_TRIAL=50
MAX_STAFF_TRIAL=3
TRIAL_FEATURES=basic,scheduling,notes

# ===================================================================
# NOTIFICATION SETTINGS
# ===================================================================
NOTIFICATION_CHANNELS=email,sms,push
EMAIL_NOTIFICATION_DELAY=300
SMS_NOTIFICATION_DELAY=300
PUSH_NOTIFICATION_DELAY=0

# Appointment Reminders
REMINDER_24H_ENABLED=true
REMINDER_2H_ENABLED=true
REMINDER_15MIN_ENABLED=false

# ===================================================================
# COMPLIANCE AND AUDIT
# ===================================================================
AUDIT_LOG_RETENTION_DAYS=365
PHI_ACCESS_LOG_ENABLED=true
FAILED_LOGIN_ATTEMPTS_MAX=5
ACCOUNT_LOCKOUT_DURATION=1800
PASSWORD_HISTORY_COUNT=5

# ===================================================================
# API DOCUMENTATION
# ===================================================================
SWAGGER_ENABLED=true
SWAGGER_UI_PATH=/api-docs
API_DOCS_PASSWORD=dev-docs-password

# ===================================================================
# PERFORMANCE SETTINGS
# ===================================================================
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Connection Pool Settings
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=30000
DB_ACQUIRE_TIMEOUT=60000

# ===================================================================
# CUSTOM APPLICATION SETTINGS
# ===================================================================
# Business Logic
APPOINTMENT_SLOT_DURATION=15
MAX_APPOINTMENTS_PER_DAY=50
CANCELLATION_WINDOW_HOURS=2
NO_SHOW_WINDOW_MINUTES=15

# Billing Settings
INVOICE_DUE_DAYS=30
LATE_FEE_PERCENTAGE=5
PAYMENT_PROCESSING_FEE=2.9
MINIMUM_PAYMENT_AMOUNT=5.00

# ===================================================================
# DEBUG AND DEVELOPMENT HELPERS
# ===================================================================
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=false
PRETTY_PRINT_JSON=true

# Seed Data
CREATE_SAMPLE_DATA=true
SAMPLE_USERS_COUNT=5
SAMPLE_PATIENTS_COUNT=20
SAMPLE_APPOINTMENTS_COUNT=50

# ===================================================================
# TIMEZONE AND LOCALIZATION
# ===================================================================
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LOCALE=en-US
DEFAULT_DATE_FORMAT=MM/DD/YYYY
DEFAULT_TIME_FORMAT=hh:mm A
DEFAULT_CURRENCY_FORMAT=USD

# ===================================================================
# END OF CONFIGURATION
# ===================================================================
# Remember to:
# 1. Never commit actual secrets to version control
# 2. Use AWS Secrets Manager for production secrets
# 3. Validate all environment variables on startup
# 4. Document any new variables added to this file