# Application Configuration
NEXT_PUBLIC_APP_NAME="Medeez"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_URL="https://app.medeez.com"

# API Configuration
NEXT_PUBLIC_API_URL="https://api.medeez.com"
NEXT_PUBLIC_API_VERSION="v1"

# Authentication (AWS Cognito)
NEXT_PUBLIC_COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"
NEXT_PUBLIC_COGNITO_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_COGNITO_REGION="us-east-1"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_BODY_CHART="true"
NEXT_PUBLIC_ENABLE_PDF_GENERATION="true"
NEXT_PUBLIC_ENABLE_VOICE_NOTES="false"

# External Integrations
NEXT_PUBLIC_GOOGLE_CALENDAR_ENABLED="true"
NEXT_PUBLIC_TWILIO_ENABLED="true"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEV_MODE="true"

# Security
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/*,application/pdf,text/*"

# Regional Settings
NEXT_PUBLIC_DEFAULT_TIMEZONE="America/New_York"
NEXT_PUBLIC_DEFAULT_LOCALE="en-US"
NEXT_PUBLIC_DEFAULT_CURRENCY="USD"