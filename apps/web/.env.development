# ===================================================================
# MEDEEZ V2 WEB - DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================================================
# Next.js Web Application Environment Variables for Development
# This file is safe to commit as it contains no secrets

# ===================================================================
# NEXT.JS CONFIGURATION
# ===================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_VERSION=2.0.0-dev

# ===================================================================
# API CONFIGURATION
# ===================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_WEB_BASE_URL=http://localhost:3000

# Internal API calls (server-side)
API_BASE_URL=http://localhost:3001
API_TIMEOUT=30000

# ===================================================================
# AWS COGNITO CONFIGURATION
# ===================================================================
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_DOMAIN=medeez-dev-auth.auth.us-east-1.amazoncognito.com

# OAuth URLs
NEXT_PUBLIC_COGNITO_SIGNIN_URL=https://medeez-dev-auth.auth.us-east-1.amazoncognito.com/login
NEXT_PUBLIC_COGNITO_SIGNUP_URL=https://medeez-dev-auth.auth.us-east-1.amazoncognito.com/signup
NEXT_PUBLIC_COGNITO_SIGNOUT_URL=https://medeez-dev-auth.auth.us-east-1.amazoncognito.com/logout

# Redirect URLs
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH_LOGOUT_URL=http://localhost:3000/auth/logout

# ===================================================================
# APPLICATION FEATURES
# ===================================================================
NEXT_PUBLIC_ENABLE_PATIENT_PORTAL=true
NEXT_PUBLIC_ENABLE_TELEHEALTH=false
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_CLAIMS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOBILE_APP=false

# ===================================================================
# GOOGLE SERVICES
# ===================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ===================================================================
# STRIPE CONFIGURATION
# ===================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===================================================================
# UI/UX CONFIGURATION
# ===================================================================
NEXT_PUBLIC_APP_NAME=Medeez
NEXT_PUBLIC_APP_TAGLINE=Healthcare Practice Management
NEXT_PUBLIC_COMPANY_NAME=Medeez Inc.
NEXT_PUBLIC_SUPPORT_EMAIL=support@dev.medeez.com
NEXT_PUBLIC_SUPPORT_PHONE=+1-800-MEDEEZ-1

# Branding
NEXT_PUBLIC_PRIMARY_COLOR=#2563eb
NEXT_PUBLIC_SECONDARY_COLOR=#64748b
NEXT_PUBLIC_LOGO_URL=/images/logo.png
NEXT_PUBLIC_FAVICON_URL=/favicon.ico

# ===================================================================
# FILE UPLOAD CONFIGURATION
# ===================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
NEXT_PUBLIC_S3_BUCKET_URL=http://localhost:9000/medeez-dev-attachments

# ===================================================================
# LOCALIZATION
# ===================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_SUPPORTED_LOCALES=en-US,es-ES,fr-FR
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/New_York
NEXT_PUBLIC_DATE_FORMAT=MM/dd/yyyy
NEXT_PUBLIC_TIME_FORMAT=h:mm a
NEXT_PUBLIC_CURRENCY=USD

# ===================================================================
# BUSINESS CONFIGURATION
# ===================================================================
NEXT_PUBLIC_APPOINTMENT_SLOT_DURATION=15
NEXT_PUBLIC_MIN_APPOINTMENT_DURATION=15
NEXT_PUBLIC_MAX_APPOINTMENT_DURATION=120
NEXT_PUBLIC_BUSINESS_HOURS_START=08:00
NEXT_PUBLIC_BUSINESS_HOURS_END=18:00
NEXT_PUBLIC_WORKING_DAYS=1,2,3,4,5

# Cancellation Policy
NEXT_PUBLIC_CANCELLATION_WINDOW_HOURS=2
NEXT_PUBLIC_NO_SHOW_WINDOW_MINUTES=15

# ===================================================================
# NOTIFICATION SETTINGS
# ===================================================================
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true

# Default Notification Preferences
NEXT_PUBLIC_DEFAULT_REMINDER_24H=true
NEXT_PUBLIC_DEFAULT_REMINDER_2H=true
NEXT_PUBLIC_DEFAULT_REMINDER_15MIN=false

# ===================================================================
# PATIENT PORTAL CONFIGURATION
# ===================================================================
NEXT_PUBLIC_PATIENT_PORTAL_ENABLED=true
NEXT_PUBLIC_PATIENT_SELF_SCHEDULING=true
NEXT_PUBLIC_PATIENT_DOCUMENT_UPLOAD=true
NEXT_PUBLIC_PATIENT_PAYMENT_PORTAL=true
NEXT_PUBLIC_PATIENT_TELEHEALTH=false

# Magic Link Settings
NEXT_PUBLIC_MAGIC_LINK_EXPIRY_HOURS=24
NEXT_PUBLIC_MAGIC_LINK_MAX_USES=3

# ===================================================================
# DEVELOPMENT TOOLS
# ===================================================================
# React Query DevTools
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Debugging
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_GRID=false
NEXT_PUBLIC_SHOW_COMPONENT_NAMES=false

# Error Boundary
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARY=true
NEXT_PUBLIC_ERROR_REPORTING_ENDPOINT=/api/errors

# ===================================================================
# PERFORMANCE CONFIGURATION
# ===================================================================
# Next.js Optimization
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_SW=false

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=webp,jpg,png

# Caching
NEXT_PUBLIC_CACHE_MAX_AGE=300
NEXT_PUBLIC_STATIC_MAX_AGE=86400

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# CSP and Security Headers
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Session Management
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_IDLE_TIMEOUT=1800000
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300

# ===================================================================
# ANALYTICS AND MONITORING
# ===================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_PROVIDER=google
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Performance Monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=/api/web-vitals

# ===================================================================
# THIRD-PARTY INTEGRATIONS
# ===================================================================
# Video Conferencing (for Telehealth)
NEXT_PUBLIC_ZOOM_SDK_KEY=your-zoom-sdk-key
NEXT_PUBLIC_TWILIO_VIDEO_API_KEY=your-twilio-video-api-key

# Chat/Support
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id
NEXT_PUBLIC_ZENDESK_CHAT_KEY=your-zendesk-chat-key

# Calendar Integration
NEXT_PUBLIC_GOOGLE_CALENDAR_ENABLED=true
NEXT_PUBLIC_OUTLOOK_CALENDAR_ENABLED=false

# ===================================================================
# SUBSCRIPTION AND BILLING
# ===================================================================
NEXT_PUBLIC_SUBSCRIPTION_REQUIRED=false
NEXT_PUBLIC_TRIAL_DAYS=14
NEXT_PUBLIC_TRIAL_MAX_PATIENTS=50
NEXT_PUBLIC_TRIAL_MAX_STAFF=3

# Billing Features
NEXT_PUBLIC_ENABLE_SUBSCRIPTION_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_INVOICE_GENERATION=true
NEXT_PUBLIC_ENABLE_PAYMENT_PROCESSING=true

# ===================================================================
# MOBILE RESPONSIVENESS
# ===================================================================
NEXT_PUBLIC_MOBILE_BREAKPOINT=768
NEXT_PUBLIC_TABLET_BREAKPOINT=1024
NEXT_PUBLIC_DESKTOP_BREAKPOINT=1280

# Progressive Web App
NEXT_PUBLIC_PWA_ENABLED=false
NEXT_PUBLIC_APP_NAME_SHORT=Medeez
NEXT_PUBLIC_APP_DESCRIPTION=Healthcare Practice Management System

# ===================================================================
# COMPLIANCE AND PRIVACY
# ===================================================================
NEXT_PUBLIC_HIPAA_COMPLIANT=true
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=/cookies

# Data Retention
NEXT_PUBLIC_DATA_RETENTION_DAYS=2555
NEXT_PUBLIC_AUDIT_LOG_RETENTION_DAYS=365

# ===================================================================
# CUSTOMIZATION
# ===================================================================
# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_THEME_CUSTOMIZATION=true

# Layout Options
NEXT_PUBLIC_DEFAULT_SIDEBAR_COLLAPSED=false
NEXT_PUBLIC_ENABLE_SIDEBAR_TOGGLE=true
NEXT_PUBLIC_ENABLE_FULL_SCREEN_MODE=true

# ===================================================================
# HELP AND DOCUMENTATION
# ===================================================================
NEXT_PUBLIC_HELP_CENTER_URL=https://help.medeez.com
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.medeez.com
NEXT_PUBLIC_TUTORIAL_ENABLED=true
NEXT_PUBLIC_ONBOARDING_ENABLED=true

# ===================================================================
# FEATURE FLAGS (Client-side)
# ===================================================================
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=false
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=true
NEXT_PUBLIC_FEATURE_BULK_OPERATIONS=false
NEXT_PUBLIC_FEATURE_VOICE_NOTES=false
NEXT_PUBLIC_FEATURE_AI_SUGGESTIONS=false

# ===================================================================
# DEVELOPMENT HELPERS
# ===================================================================
NEXT_PUBLIC_SHOW_SAMPLE_DATA=true
NEXT_PUBLIC_ENABLE_MOCK_MODE=false
NEXT_PUBLIC_BYPASS_AUTH=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# ===================================================================
# PATIENT BOOKING WIDGET
# ===================================================================
NEXT_PUBLIC_BOOKING_WIDGET_ENABLED=true
NEXT_PUBLIC_BOOKING_WIDGET_THEME=modern
NEXT_PUBLIC_BOOKING_CONFIRMATION_EMAIL=true
NEXT_PUBLIC_BOOKING_CONFIRMATION_SMS=false

# ===================================================================
# REPORTING AND EXPORTS
# ===================================================================
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_EXPORT_FORMATS=pdf,csv,xlsx
NEXT_PUBLIC_MAX_EXPORT_RECORDS=10000

# ===================================================================
# COMMUNICATION SETTINGS
# ===================================================================
NEXT_PUBLIC_ENABLE_INTERNAL_MESSAGING=true
NEXT_PUBLIC_ENABLE_PATIENT_MESSAGING=true
NEXT_PUBLIC_MESSAGE_MAX_LENGTH=1000
NEXT_PUBLIC_FILE_ATTACHMENT_MAX_SIZE=5242880

# ===================================================================
# ACCESSIBILITY
# ===================================================================
NEXT_PUBLIC_ENABLE_HIGH_CONTRAST=true
NEXT_PUBLIC_ENABLE_SCREEN_READER=true
NEXT_PUBLIC_ENABLE_KEYBOARD_NAVIGATION=true
NEXT_PUBLIC_MIN_FONT_SIZE=12
NEXT_PUBLIC_MAX_FONT_SIZE=24

# ===================================================================
# END OF CONFIGURATION
# ===================================================================