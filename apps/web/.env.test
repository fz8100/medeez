# Frontend Test Environment Configuration for Medeez v2 Web App
# HIPAA-compliant frontend testing environment

NODE_ENV=test
NEXT_PUBLIC_NODE_ENV=test

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=test-user-pool-id
NEXT_PUBLIC_COGNITO_CLIENT_ID=test-client-id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,doc,docx

# Testing Configuration
NEXT_PUBLIC_MOCK_API=true
NEXT_PUBLIC_DISABLE_AUTH_REDIRECT=true
NEXT_PUBLIC_DISABLE_EXTERNAL_CALLS=true

# Security
NEXT_PUBLIC_DISABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_CSP=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Test Data
NEXT_PUBLIC_TEST_CLINIC_ID=test-clinic-12345
NEXT_PUBLIC_TEST_USER_ID=test-user-67890